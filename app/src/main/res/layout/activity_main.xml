<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal">

    <ImageButton
        android:id="@+id/PoseDetection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/lightteal"
        app:cardCornerRadius="16dp"
        android:background="@drawable/round_accessibility_24"
        android:text="Pose Detection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/FaceDetection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337">
    </ImageButton>

    <ImageButton
        android:id="@+id/FaceDetection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/lightteal"
        android:background="@drawable/baseline_account_circle_24"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PoseDetection"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337">
    </ImageButton>

    <ImageButton
        android:id="@+id/MusicDetection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightteal"
        android:background="@drawable/baseline_album_24"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toStartOf="@+id/Calibration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PoseDetection">
    </ImageButton>

    <ImageButton
        android:id="@+id/Calibration"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lightteal"
        android:background="@drawable/sharp_action_key_24"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MusicDetection"
        app:layout_constraintTop_toBottomOf="@+id/FaceDetection">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>